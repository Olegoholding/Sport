<Page x:Class="Sport.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sport"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage">

    <Grid Background="{DynamicResource Current}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border x:Name="BackBorder" Cursor="Hand" Background="{StaticResource Accent}" Height="100" VerticalAlignment="Top" CornerRadius="0,0,15,0" MouseDown="BackBorder_MouseDown">
                <TextBlock x:Name="NameTextBlock"  Text="Название раздела" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="{DynamicResource Current}" FontWeight="Bold"/>
            </Border>

            <TextBox Grid.Row="1" Margin="15" FontSize="20"/>
            <Button Grid.Row="2" Height="50" Margin="15,0,15,15">
                <TextBlock Text="Поиск" Foreground="{DynamicResource Current}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            </Button>

            <Button VerticalAlignment="Bottom" Grid.Row="3" Height="50" Margin="15,0,15,15">
                <TextBlock Text="Добавить" Foreground="{DynamicResource Current}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            </Button>
            <Button Grid.Row="4" Height="50" Margin="15,0,15,15">
                <TextBlock Text="Удалить" Foreground="{DynamicResource Current}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            </Button>
        </Grid>

        <DataGrid Grid.Column="1"/>

    </Grid>
</Page>
