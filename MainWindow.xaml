                                    </Canvas>
                                </Viewbox>

                            </Border>
                        </Grid>
                    </Button>

                    <Button x:Name="CompetitionsButton" Tag="Журнал" Uid="Номер" Click="SportManButton_Click"  Margin="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Выступления" Margin="15" Foreground="{DynamicResource Current}" FontSize="36" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <Border Grid.Row="1" Background="{DynamicResource Current}" Margin="15,0,15,15" CornerRadius="15" >
                                <Viewbox Stretch="Uniform">
                                    <Canvas Width="27" Height="31" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path StrokeThickness="2" Fill="{DynamicResource Button}" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Stretch="Fill"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="19" Width="14" Canvas.Left="6.377" Canvas.Top="5.728">
